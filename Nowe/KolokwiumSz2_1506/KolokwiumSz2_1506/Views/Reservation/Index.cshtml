@using SzkolenieKolokwium.storage.Dto;
@model IEnumerable<ReservationDto>

@{ 
    ViewData["Title"] = "Rezerwacja Pokoi";
}

@if (Model.Any())
{
                <table class="table">
                    <thead class="tab-pane">
                        <tr>
                            <th>Imię</th>
                            <th>Nazwisko</th>
                            <th>Email</th>
                            <th>Nazwa pokoju</th>
                            <th><a class="btn btn-outline-primary" asp-action="Add">Dodaj rezerwację</a></th>
                        </tr>
                    </thead>
                    <tbody class="tab-content">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.RoomName</td>
                            <td>
                                <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class=" btn btn-link text-danger float-right">Usuń</button>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
}
else
{
    <p>Brak rezerwacji</p>
    <p>
        <a class="btn btn-outline-primary" asp-action="Add">Dodaj rezerwację</a>
    </p>
}